@model IEnumerable<SportAsso.Models.lieu>

@{
    ViewBag.Title = "Lieux";
}

<h2>Liste des lieux</h2>

<p>
    @Html.ActionLink("Nouveau lieu", "Create")
</p>
<table class="table table-striped">
    <tr style="background-color: #a3a3a3; color: black;">
        <th>
            @Html.DisplayNameFor(model => model.lieu_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lieu_nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adresse_lieu)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lieu_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lieu_nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adresse_lieu)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.lieu_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.lieu_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.lieu_id })
            </td>
        </tr>
    }

</table>
